<div class="row">
<div class=" col-lg-3">
<%= form_with model: @employee do |form| %>
  <div class="field">
    <%= form.text_field :first_name , class:"form-control", placeholder:"First Name" %>
  </div>

  <div class="field">
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
  </div>

  <div class="field">
    <%= form.email_field :email, class:"form-control", placeholder:"Email"%>
  </div>

  <div class="field">
    <%= form.number_field :phone_num, class:"form-control", placeholder:"Phone Number" %>
  </div>

  <div class="field">
    <%= form.date_field :hire_date, class:"form-control", placeholder:"Hire Date" %>
  </div>

  <div class="field">
    <%= form.text_field :job_title, class:"form-control", placeholder:"Job Title" %>
  </div>

    <div class="field">
    <%= form.text_field :department, class:"form-control", placeholder:"Department" %>
  </div>
    
  <div class="actions">
    <%= form.submit  %>
  </div>
<% end %>
</div>
</div>
